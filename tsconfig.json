{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./build",
    "rootDir": "./src",
    "typeRoots": [
      "./node_modules/@types",
      "./src/types",
      "./types"
    ],
    "types": ["node"],
    "moduleResolution": "node"
  },
  "include": ["src/**/*.ts", "src/types/**/*.d.ts", "src/types/global.d.ts"],
  "exclude": ["node_modules", "dist"]
}