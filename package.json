{
  "name": "node-ts-starter",
  "version": "1.0.0",
  "description": "A simple and lightweight nodejs boilerplate using typescript",
  "main": "build/server.js",
  "scripts": {
    "build": "npx tsc -p .",
    "start:prod": "node .",
    "start": "npx nodemon src/server.ts",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint 'src/**/*.{js,ts}'",
    "lint:fix": "eslint 'src/**/*.{js,ts}' --fix",
    "format": "prettier --write 'src/**/*.{js,ts,json,css,md,html,pug}'",
    "prepare": "husky install"
  },
  "keywords": [
    "node.js",
    "express",
    "api",
    "typescript",
    "docker"
  ],
  "author": "Abdou-Raouf ATARMLA",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "ioredis": "^5.4.1",
    "minio": "^8.0.0",
    "mongoose": "^8.4.3",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.9",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-promise": "^6.2.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.7",
    "node-ts": "^6.0.1",
    "nodemon": "^3.1.3",
    "prettier": "^3.3.2",
    "prettier-plugin-pug": "^1.0.0-alpha.8",
    "ts-node": "^10.9.2",
    "typescript": "^5.0.4"
  },
    "lint-staged": {
      "src/**/*.{js,ts,tsx}": [
        "eslint --fix",
        "prettier --write",
        "git add"
      ]
    }
  
}
